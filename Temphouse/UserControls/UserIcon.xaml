<UserControl x:Class="Temphouse.UserControls.UserIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Temphouse.UserControls"
             mc:Ignorable="d" Height="60" Width="60"
             d:DesignHeight="60" d:DesignWidth="60">
    <Grid>
        <Ellipse Stroke="{DynamicResource SecondarySolidColorBrush/300}" StrokeThickness="2">
            <Ellipse.Fill>
                <LinearGradientBrush>
                    <GradientStop Color="{DynamicResource SecondaryColor/500/100}" Offset="0" />
                    <GradientStop Color="{DynamicResource SecondaryColor/700/100}" Offset="1" />
                </LinearGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>
