<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:rb="clr-namespace:Temphouse.Themes.RoundedButtonControl"
                    xmlns:sqb="clr-namespace:Temphouse.Themes.SquaredButtonControl">

    <!--#region Переменные -->

    <sys:Double x:Key="Window.HeaderBar.HeaderHeight">36</sys:Double>
    <x:Static x:Key="Window.HeaderBar.HeaderZIndex" Member="sys:Int32.MaxValue" />

    <x:Static x:Key="Window.HeaderBar.HeaderIconHeight" Member="SystemParameters.IconHeight"/>
    <x:Static x:Key="Window.HeaderBar.HeaderIconWidth" Member="SystemParameters.IconWidth"/>

    <!--#endregion-->

    <!--#region Цветовая схема -->

    <SolidColorBrush x:Key="WindowSolidColorBrush" Color="{DynamicResource WindowColor}"/>
    
    <!--#endregion-->
    
    <!-- 
    Требования:
    1. Необходисо найти возможность скруглить окно так, чтобы фигуры не выходили за пределы окна. - Готово 
    2. Найти альтернативу AllowsTransparency, для экономии производительности.
    3. Сделать общий стиль и шаблон так, чтобы они были у всех окон. - Готово 
    4. Использовать команды для кнопок - Готово
    5. Найти альтернативный способ, чтобы он отображался и в дизайнере.
    6. Вынести цвета из RoundedButton.xaml в DefaultColorScheme.xaml
    -->

    <!-- 
        Window:
        d:Template="{DynamicResource DefaultWindowTemplate}" 
        Style="{DynamicResource DefaultWindowStyle}"
    
        ExtendedWindow:
        d:Template="{DynamicResource DefaultWindowTemplate}" 
        d:Style="{DynamicResource DefaultWindowStyle}"
    -->

    <Style x:Key="DefaultWindowRightButtonStyle" TargetType="{x:Type rb:RoundedButton}">
        <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Edge" Value="25"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="IsTabStop" Value="False"/>
    </Style>

</ResourceDictionary>