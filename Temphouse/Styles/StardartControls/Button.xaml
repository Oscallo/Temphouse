<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ap="http://schemas.oscallo.com/coreland/ui/controls">

    <!-- Version 1.0.0 -->


    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="ap:CornerRadiusSetter.CornerRadius" Value="5"/>
    </Style>

    <Style x:Key="LoginButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Margin" Value="0,20,0,00" />
        <Setter Property="Height" Value="50" />
    </Style>

</ResourceDictionary>