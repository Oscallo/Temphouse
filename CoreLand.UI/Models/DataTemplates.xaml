<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CoreLand.UI.Models"
                    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp">


    <DataTemplate DataType="{x:Type local:WindowButtonModel}">
        <fa:IconImage Margin="4" VerticalAlignment="Center" HorizontalAlignment="Center" Icon="{Binding Icon}" Foreground="{Binding Foreground,RelativeSource={RelativeSource AncestorType=ContentControl}}"/>
    </DataTemplate>
    
</ResourceDictionary>