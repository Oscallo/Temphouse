<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Version 1.0.0 -->

    <Style TargetType="{x:Type ToolTip}">
        <Style.Resources>
            
            <!--#region Background Resources -->

            <SolidColorBrush x:Key="ToolTip.Background" Color="{DynamicResource SecondaryColor/300/050}"/>

            <!--#endregion-->


            <!--#region Foreground Resources -->

            <SolidColorBrush x:Key="ToolTip.Foreground" Color="{DynamicResource OnSecondaryColor/300/050}"/>

            <!--#endregion-->

        </Style.Resources>
        
        <Setter Property="Background" Value="{DynamicResource ToolTip.Background}"/>
        <Setter Property="Foreground" Value="{DynamicResource ToolTip.Foreground}"/>
    </Style>
    
</ResourceDictionary>